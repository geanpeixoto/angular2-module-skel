{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "../../dist/",
    "sourceMap": true,
    "target": "es5",
    "stripInternal": false,
    "baseUrl": "",
    "typeRoots": [
      "../../node_modules/@types/!(node)"
    ],
    "types": [
      "systemjs"
    ],
    "paths": {
      "@company/skel": [
        "../../dist/@company/skel"
      ]
    }
  },
  "include": [
    "./**/*.ts"
  ]
}
